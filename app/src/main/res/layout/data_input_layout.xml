<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/data_title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title Of the Piece"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/entered_data_recycler_view"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/data_title_view"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/barline"
        android:text="|"
        android:textSize="@dimen/data_entry_sub_button_text_size"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundcorner_dark"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/entered_data_recycler_view"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"/>

    <HorizontalScrollView
        android:id="@+id/subdivision_values_scroll_view"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/entered_data_recycler_view"
        app:layout_constraintLeft_toRightOf="@+id/barline"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/one"
                android:text="1"
                android:textSize="@dimen/data_entry_sub_button_text_size"
                android:layout_margin="@dimen/data_entry_sub_button_margin"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roundcorner_light"/>

            <TextView
                android:id="@+id/two"
                android:text="2"
                android:textSize="@dimen/data_entry_sub_button_text_size"
                android:layout_margin="@dimen/data_entry_sub_button_margin"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roundcorner_light"/>

            <TextView
                android:id="@+id/three"
                android:text="3"
                android:textSize="@dimen/data_entry_sub_button_text_size"
                android:layout_margin="@dimen/data_entry_sub_button_margin"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roundcorner_light"/>

            <TextView
                android:id="@+id/four"
                android:text="4"
                android:textSize="@dimen/data_entry_sub_button_text_size"
                android:layout_margin="@dimen/data_entry_sub_button_margin"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roundcorner_light"/>

            <TextView
                android:id="@+id/five"
                android:text="5"
                android:textSize="@dimen/data_entry_sub_button_text_size"
                android:layout_margin="@dimen/data_entry_sub_button_margin"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roundcorner_light"/>

            <TextView
                android:id="@+id/six"
                android:text="6"
                android:textSize="@dimen/data_entry_sub_button_text_size"
                android:layout_margin="@dimen/data_entry_sub_button_margin"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roundcorner_light"/>

            <TextView
                android:id="@+id/seven"
                android:text="7"
                android:textSize="@dimen/data_entry_sub_button_text_size"
                android:layout_margin="@dimen/data_entry_sub_button_margin"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roundcorner_light"/>

            <TextView
                android:id="@+id/eight"
                android:text="8"
                android:textSize="@dimen/data_entry_sub_button_text_size"
                android:layout_margin="@dimen/data_entry_sub_button_margin"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roundcorner_light"/>

            <TextView
                android:id="@+id/nine"
                android:text="9"
                android:textSize="@dimen/data_entry_sub_button_text_size"
                android:layout_margin="@dimen/data_entry_sub_button_margin"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roundcorner_light"/>

            <TextView
                android:id="@+id/ten"
                android:text="10"
                android:textSize="@dimen/data_entry_sub_button_text_size"
                android:layout_margin="@dimen/data_entry_sub_button_margin"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roundcorner_light"/>

            <TextView
                android:id="@+id/twelve"
                android:text="12"
                android:textSize="@dimen/data_entry_sub_button_text_size"
                android:layout_margin="@dimen/data_entry_sub_button_margin"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roundcorner_light"/>
            <TextView
                android:id="@+id/other"
                android:text="\?"
                android:textSize="@dimen/data_entry_sub_button_text_size"
                android:layout_margin="@dimen/data_entry_sub_button_margin"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roundcorner_light"/>

        </LinearLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/data_delete_button"
        android:text="Delete"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barline"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/data_save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/data_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"/>
</android.support.constraint.ConstraintLayout>