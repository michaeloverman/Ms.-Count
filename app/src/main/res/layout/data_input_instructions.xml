<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/transparentBlack"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.Guideline
        android:id="@+id/centerline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>
    <TextView
        android:id="@+id/data_entry_instruction"
        android:text="Enter beats using the number of subdivisions per beat. Enter a new barline for each new measure. \'?\' will allow you to enter any subdivision value. \'Delete\' button deletes last or selected entry.\nTo insert, select entry in edit window. New values will be inserted before selected value. Delete a value in the middle of the piece by selecting unwanted value, and hitting \'Delete\'.\nSave before leaving this screen or data will be lost."
        style="@style/InstructionOverlayTextStyle"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/help_cancel_button"
        android:text="@string/okay"
        android:backgroundTint="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"/>
</android.support.constraint.ConstraintLayout>