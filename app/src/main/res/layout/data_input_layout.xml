<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimaryLight"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/data_title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title Of the Piece"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/entered_data_recycler_view"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:background="@color/parchment"
        app:layout_constraintTop_toBottomOf="@+id/data_title_view"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/barline"
        android:text="|"
        android:textSize="@dimen/data_entry_barline_text_size"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundcorner_dark"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/entered_data_recycler_view"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        />

           <TextView
               android:id="@+id/one"
               android:text="1"
               android:textSize="@dimen/data_entry_sub_button_text_size"
               android:paddingLeft="4dp"
               android:paddingRight="4dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/roundcorner_primary"
               app:layout_constraintTop_toTopOf="@+id/barline"
               android:layout_marginTop="0dp"
               app:layout_constraintRight_toLeftOf="@+id/two"
               android:layout_marginRight="16dp"
               />

            <TextView
                android:id="@+id/two"
                android:text="2"
                android:textSize="@dimen/data_entry_sub_button_text_size"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roundcorner_primary"
                app:layout_constraintTop_toTopOf="@+id/barline"
                android:layout_marginTop="0dp"
                app:layout_constraintRight_toLeftOf="@+id/three"
                android:layout_marginRight="16dp"
                />

            <TextView
                android:id="@+id/three"
                android:text="3"
                android:textSize="@dimen/data_entry_sub_button_text_size"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roundcorner_primary"
                app:layout_constraintTop_toTopOf="@+id/barline"
                app:layout_constraintRight_toLeftOf="@+id/four"
                android:layout_marginRight="16dp"
                />

            <TextView
                android:id="@+id/four"
                android:text="4"
                android:textSize="@dimen/data_entry_sub_button_text_size"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roundcorner_primary"
                app:layout_constraintTop_toTopOf="@+id/barline"
                android:layout_marginTop="0dp"
                app:layout_constraintRight_toLeftOf="@+id/other"
                android:layout_marginRight="16dp"
                />

            <TextView
                android:id="@+id/five"
                android:text="5"
                android:textSize="@dimen/data_entry_sub_button_text_size"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roundcorner_primary"
                app:layout_constraintTop_toTopOf="@+id/seven"
                android:layout_marginTop="0dp"
                app:layout_constraintRight_toLeftOf="@+id/seven"
                android:layout_marginRight="16dp"/>

            <TextView
                android:id="@+id/six"
                android:text="6"
                android:textSize="@dimen/data_entry_sub_button_text_size"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roundcorner_primary"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/one"
                app:layout_constraintRight_toRightOf="@+id/two"
                app:layout_constraintLeft_toLeftOf="@+id/two"
                />

            <TextView
                android:id="@+id/seven"
                android:text="7"
                android:textSize="@dimen/data_entry_sub_button_text_size"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roundcorner_primary"
                app:layout_constraintTop_toTopOf="@+id/ten"
                android:layout_marginTop="0dp"
                app:layout_constraintRight_toLeftOf="@+id/ten"
                android:layout_marginRight="16dp"/>

            <TextView
                android:id="@+id/eight"
                android:text="8"
                android:textSize="@dimen/data_entry_sub_button_text_size"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roundcorner_primary"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/one"
                app:layout_constraintRight_toRightOf="@+id/three"
                app:layout_constraintLeft_toLeftOf="@+id/three"/>

            <TextView
                android:id="@+id/nine"
                android:text="9"
                android:textSize="@dimen/data_entry_sub_button_text_size"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roundcorner_primary"
                android:layout_marginRight="0dp"
                app:layout_constraintRight_toRightOf="@+id/four"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/four"
                app:layout_constraintLeft_toLeftOf="@+id/four"/>

            <TextView
                android:id="@+id/ten"
                android:text="10"
                android:textSize="@dimen/data_entry_sub_button_text_size"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roundcorner_primary"
                android:layout_marginRight="1dp"
                app:layout_constraintRight_toRightOf="@+id/eight"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/eight"/>

            <TextView
                android:id="@+id/twelve"
                android:text="12"
                android:textSize="@dimen/data_entry_sub_button_text_size"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roundcorner_primary"
                tools:layout_editor_absoluteY="372dp"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toLeftOf="@+id/nine"
                app:layout_constraintTop_toBottomOf="@+id/nine"/>
            <TextView
                android:id="@+id/other"
                android:text="\?"
                android:textSize="@dimen/data_entry_sub_button_text_size"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roundcorner_primary"
                android:layout_marginRight="16dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/barline"
                android:layout_marginTop="0dp"/>

    <Button
        android:id="@+id/data_delete_button"
        android:text="Delete"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@+id/ten"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/data_save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:backgroundTint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/data_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/repeat_sign"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/ic_repeat_sign"
        android:background="@drawable/roundcorner_primary"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/barline"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"/>
</android.support.constraint.ConstraintLayout>