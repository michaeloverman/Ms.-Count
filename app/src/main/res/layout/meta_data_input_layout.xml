<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimaryLight"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/composer_label_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/composer"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/data_entry_outside_margin"
        android:layout_marginLeft="@dimen/data_entry_outside_margin"
        android:layout_marginStart="@dimen/data_entry_outside_margin"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/composer_name_text_entry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/data_entry_outside_margin"
        android:layout_marginEnd="@dimen/data_entry_outside_margin"
        android:layout_marginLeft="@dimen/data_entry_outside_margin"
        android:layout_marginStart="@dimen/data_entry_outside_margin"
        android:singleLine="true"
        android:inputType="textCapWords"
        android:imeOptions="actionNext"
        android:nextFocusDown="@+id/title_text_entry"
        android:digits="@string/valid_characters_string"
        android:hint="Last name, First name"
        app:layout_constraintTop_toBottomOf="@+id/composer_label_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/title_label_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        app:layout_constraintTop_toBottomOf="@+id/composer_name_text_entry"
        android:layout_marginLeft="@dimen/data_entry_outside_margin"
        android:layout_marginStart="@dimen/data_entry_outside_margin"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/title_text_entry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textCapWords"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:nextFocusForward="@+id/baseline_subdivision_entry"
        android:digits="@string/valid_characters_string"
        android:hint="@string/title_hint_string"
        app:layout_constraintTop_toBottomOf="@+id/title_label_view"
        android:layout_marginLeft="@dimen/data_entry_outside_margin"
        android:layout_marginStart="@dimen/data_entry_outside_margin"
        android:layout_marginRight="@dimen/data_entry_outside_margin"
        android:layout_marginEnd="@dimen/data_entry_outside_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/baseline_subdivision_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subdivisions_in_primary_beat"
        app:layout_constraintTop_toBottomOf="@+id/title_text_entry"
        android:layout_marginLeft="@dimen/data_entry_outside_margin"
        android:layout_marginStart="@dimen/data_entry_outside_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/countoff_subdivision_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subdivisions clicked in countoff"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/baseline_subdivision_entry"
        android:layout_marginStart="16dp"/>

    <EditText
        android:id="@+id/baseline_subdivision_entry"
        android:layout_width="105dp"
        android:layout_height="42dp"
        android:layout_marginStart="@dimen/data_entry_outside_margin"
        android:layout_marginLeft="@dimen/data_entry_outside_margin"
        android:ems="6"
        android:gravity="center"
        android:hint="2"
        android:inputType="number"
        android:imeOptions="actionNext"
        android:nextFocusForward="@+id/countoff_subdivision_entry"
        app:layout_constraintLeft_toRightOf="@+id/baseline_subdivision_label"
        app:layout_constraintBaseline_toBaselineOf="@+id/baseline_subdivision_label"/>

    <EditText
        android:id="@+id/countoff_subdivision_entry"
        android:layout_width="105dp"
        android:layout_height="42dp"
        android:ems="6"
        android:gravity="center"
        android:hint="2"
        android:inputType="number"
        android:imeOptions="actionNext"
        android:nextFocusForward="@+id/default_tempo_entry"
        app:layout_constraintLeft_toRightOf="@+id/countoff_subdivision_label"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/countoff_subdivision_label"/>

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        />

    <TextView
        android:id="@+id/default_tempo_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_tempo"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toLeftOf="@+id/guideline"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.558"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/countoff_subdivision_entry"/>

    <EditText
        android:id="@+id/default_tempo_entry"
        android:layout_width="63dp"
        android:layout_height="43dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:gravity="center"
        android:hint="120"
        android:inputType="number"
        android:imeOptions="actionNext"
        android:nextFocusForward="@+id/baseline_rhythmic_value_recycler"
        app:layout_constraintLeft_toLeftOf="@+id/default_tempo_label"
        app:layout_constraintRight_toRightOf="@+id/default_tempo_label"
        app:layout_constraintTop_toBottomOf="@+id/default_tempo_label"
        app:layout_constraintHorizontal_bias="0.501"/>

    <TextView
        android:id="@+id/baseline_rhythmic_value_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rhythm_of_primary_click"
        android:layout_marginRight="7dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@+id/default_tempo_label"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/baseline_rhythmic_value_recycler"
        android:layout_width="151dp"
        android:layout_height="56dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/baseline_rhythmic_value_label"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/baseline_rhythmic_value_label"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/baseline_rhythmic_value_label"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="-5dp"
        app:layout_constraintHorizontal_bias="0.521"
        >

    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/enter_beats_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/program_beats_2lines"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginTop="38dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toRightOf="@+id/baseline_rhythmic_value_recycler"
        app:layout_constraintLeft_toLeftOf="@+id/baseline_rhythmic_value_recycler"
        app:layout_constraintTop_toBottomOf="@+id/default_tempo_entry"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        />

    <Button
        android:id="@+id/save_program_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_program"
        android:backgroundTint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/options_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/options"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/default_tempo_label"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/default_tempo_label"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="@+id/enter_beats_button"
        />

