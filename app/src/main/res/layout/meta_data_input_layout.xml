<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimaryLight"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/composer_label_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Composer:"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/data_entry_outside_margin"
        android:layout_marginLeft="@dimen/data_entry_outside_margin"
        android:layout_marginStart="@dimen/data_entry_outside_margin"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/composer_name_text_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textCapWords"
        android:imeOptions="actionNext"
        android:nextFocusForward="@+id/title_text_entry"
        android:digits="@string/valid_characters_string"
        android:hint="Last name, First name"
        app:layout_constraintTop_toBottomOf="@+id/composer_label_view"
        android:layout_marginLeft="@dimen/data_entry_outside_margin"
        android:layout_marginStart="@dimen/data_entry_outside_margin"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/title_label_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title:"
        app:layout_constraintTop_toBottomOf="@+id/composer_name_text_entry"
        android:layout_marginLeft="@dimen/data_entry_outside_margin"
        android:layout_marginStart="@dimen/data_entry_outside_margin"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/title_text_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textCapWords"
        android:imeOptions="actionNext"
        android:digits="@string/valid_characters_string"
        android:hint="Sonata No. 3, Allegro"
        android:nextFocusForward="@+id/baseline_subdivision_entry"
        app:layout_constraintTop_toBottomOf="@+id/title_label_view"
        android:layout_marginLeft="@dimen/data_entry_outside_margin"
        android:layout_marginStart="@dimen/data_entry_outside_margin"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/baseline_subdivision_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subdivisions in Primary Beat"
        app:layout_constraintTop_toBottomOf="@+id/title_text_entry"
        android:layout_marginLeft="@dimen/data_entry_outside_margin"
        android:layout_marginStart="@dimen/data_entry_outside_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/countoff_subdivision_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subdivisions clicked in countoff"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/baseline_subdivision_entry"/>

    <EditText
        android:id="@+id/baseline_subdivision_entry"
        android:layout_width="105dp"
        android:layout_height="42dp"
        android:layout_marginStart="@dimen/data_entry_outside_margin"
        android:ems="10"
        android:gravity="center"
        android:hint="2"
        android:inputType="number"
        android:imeOptions="actionNext"
        android:nextFocusForward="@+id/countoff_subdivision_entry"
        app:layout_constraintTop_toTopOf="@+id/baseline_subdivision_label"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toRightOf="@+id/baseline_subdivision_label"
        android:layout_marginLeft="0dp"/>

    <EditText
        android:id="@+id/countoff_subdivision_entry"
        android:layout_width="105dp"
        android:layout_height="42dp"
        android:ems="10"
        android:gravity="center"
        android:hint="2"
        android:inputType="number"
        android:imeOptions="actionNext"
        android:nextFocusForward="@+id/default_tempo_entry"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="@+id/countoff_subdivision_label"
        app:layout_constraintLeft_toRightOf="@+id/countoff_subdivision_label"
        android:layout_marginLeft="8dp"/>

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        />

    <TextView
        android:id="@+id/default_tempo_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Default Tempo"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toLeftOf="@+id/baseline_rhythmic_value_label"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.557"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/countoff_subdivision_entry"/>

    <EditText
        android:id="@+id/default_tempo_entry"
        android:layout_width="63dp"
        android:layout_height="43dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:gravity="center"
        android:hint="120"
        android:inputType="number"
        android:imeOptions="actionNext"
        android:nextFocusForward="@+id/baseline_rhythmic_value_entry"
        app:layout_constraintLeft_toLeftOf="@+id/default_tempo_label"
        app:layout_constraintRight_toRightOf="@+id/default_tempo_label"
        app:layout_constraintTop_toBottomOf="@+id/default_tempo_label"
        android:layout_marginTop="-1dp"
        app:layout_constraintHorizontal_bias="0.501"/>

    <TextView
        android:id="@+id/baseline_rhythmic_value_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rhythmic Value of Primary Click"
        android:layout_marginTop="0dp"
        android:layout_marginRight="37dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@+id/default_tempo_label"
        />
    <EditText
        android:id="@+id/baseline_rhythmic_value_entry"
        android:layout_width="63dp"
        android:layout_height="43dp"
        android:layout_marginTop="0dp"
        android:inputType="number"
        android:hint="4"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/baseline_rhythmic_value_label"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/baseline_rhythmic_value_label"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/baseline_rhythmic_value_label"
        />

    <Button
        android:id="@+id/enter_beats_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Program Beats"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/default_tempo_entry"
        />

    <Button
        android:id="@+id/save_program_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Program"
        android:backgroundTint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

</android.support.constraint.ConstraintLayout>