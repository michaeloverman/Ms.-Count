<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <TextView
        android:id="@+id/sticking_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RLRL RLRL"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="56sp"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:paddingBottom="32sp"
        android:paddingLeft="16sp"
        android:paddingRight="16sp"
        android:paddingTop="32sp"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/sticking_view"
        android:layout_centerHorizontal="true"
        android:id="@+id/info_view"/>

    <ImageButton
        android:id="@+id/button_previous_stone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/ic_keyboard_arrow_left"/>

    <ImageButton
        android:id="@+id/button_next_stone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/ic_keyboard_arrow_right"/>

    <TextView
        android:id="@+id/stone_label"
        android:text="Stone 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sticking_view"
        android:textSize="22sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:text="2:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/countdown"
        android:textSize="48sp"
        android:textAlignment="textEnd"/>

    <TextView
        android:text="TIMER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/countdown"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/timer_label"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_alignLeft="@+id/countdown"
        android:layout_alignStart="@+id/countdown"/>

    <TextView
        android:text="TEMPO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/metronome_label"
        android:textSize="20sp"
        android:textAlignment="center"/>

    <TextView
        android:text="120"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/metronome_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tempo_marking"
        android:textSize="48sp"/>

    <TextView
        android:id="@+id/bpm_label"
        android:text="@string/bpm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tempo_marking"
        android:layout_toRightOf="@+id/tempo_marking"
        android:layout_toEndOf="@+id/tempo_marking"
        android:layout_marginBottom="16dp"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tempo_marking"
        android:layout_alignParentStart="true"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="@string/start"/>

</RelativeLayout>
