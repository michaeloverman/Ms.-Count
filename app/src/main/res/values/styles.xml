<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="android:windowBackground">@color/colorPrimaryLight</item>
    </style>

    <style name="AppTheme.Main" parent="@style/AppTheme"/>
    <style name="AppTheme.SelectProgram" parent="@style/AppTheme"/>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="popupTheme">@style/Theme.AppCompat.Light</item>
    </style>

    <style name="OddmeterButtonStyle" parent="AppTheme.Main">
        <item name="android:layout_width">@dimen/odd_met_subdiv_button_size</item>
        <item name="android:layout_height">@dimen/odd_met_subdiv_button_size</item>
        <item name="android:background">@drawable/roundcorner_primary</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/odd_met_subdiv_button_font_size</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
